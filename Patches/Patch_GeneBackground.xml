<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- display custom BG on my icon if WVC is loaded :) -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>WVC - Xenotypes and Genes</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/GeneDef[defName="GeneCourier"]</xpath>
      <success>Always</success>
      <value>
        <modExtensions>
          <li Class="WVC.GeneExtension">
            <backgroundPathArchite>Icons/GeneBackground_GeneCourier</backgroundPathArchite>
          </li>
        </modExtensions>
      </value>
    </match>
  </Operation>

</Patch>
